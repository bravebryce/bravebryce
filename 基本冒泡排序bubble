#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include<string.h>
void bubble(int arr[],int sz){
	int i=0;
	for (i = 0; i<sz-1; i++)
	{
		int j=0;
		for (j = 0; j<sz - 1 - i; j++){
			if (arr[j] > arr[j + 1])
			{
				int temp = arr[j];
				arr[j] = arr[j + 1];
				arr[j + 1] = temp;
			}
		}
	}
}
int main()
{
	int	arr[] = { 9, 8, 7, 6, 5, 4, 3, 2, 1, 0 }; 
	int sz = sizeof(arr) / sizeof(int);
	bubble(arr,sz);//arr是数组，我们对数组arr进行传参，实际上传递过去的是数组arr首元素的地址。
	int i;
	for (i = 0; i<sz; i++){
		printf("%d", arr[i]);
	}
	return 0;
}
